@model ShoroukAcademy.ShaTask.Models.Models.InvoiceDetail

@{
    ViewData["Title"] = "Details";
}

<h1>بيانات الفاتورة</h1>

<div>
    <h4>البيانات</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            اسم المنتج
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            العدد المطلوب
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCount)
        </dd>
        <dt class = "col-sm-2">
            السعر
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class = "col-sm-2">
            اسم العميل
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceHeader.CustomerName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">تعديل</a> |
    <a asp-action="Index">العودة إلى القائمة</a>
</div>
