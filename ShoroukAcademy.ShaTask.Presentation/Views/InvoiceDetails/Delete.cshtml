@model ShoroukAcademy.ShaTask.Models.Models.InvoiceDetail

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف فاتورة</h1>

<div>
    <h4>تفاصيل الفاتورة</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            اسم المنتج
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            العدد
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCount)
        </dd>
        <dt class = "col-sm-2">
            السعر
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class = "col-sm-2">
            اسم العميل
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceHeader.CustomerName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">العودة إلى القائمة</a>
    </form>
</div>
