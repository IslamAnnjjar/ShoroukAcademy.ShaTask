@model IEnumerable<ShoroukAcademy.ShaTask.Models.Models.Cashier>

@{
    ViewData["Title"] = "Index";
}

<h1>إضافة كاشير</h1>

<p>
    <a asp-action="Create">إضافة كاشير جديد</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                اسم الكاشير
            </th>
            <th>
                الفرع
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CashierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.BranchName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">تفاصيل</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
