@using ShoroukAcademy.ShaTask.Presentation.ViewModels;

@model LoginModel

<h1> تسجيل دخول </h1>
<form asp-action="SignIn" asp-controller="User" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="UserName" >اسم الدخول</label>
        <input asp-for="UserName" class="form-control" placeholder="admin" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">الرقم السري</label>
        <input asp-for="Password" class="form-control" placeholder="admin1" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe">تذكرني</label>
        <input asp-for="RememberMe" />
        <span asp-validation-for="RememberMe"></span>
    </div>
    <input type="submit" value="دخول" class="btn btn-primary" />
</form>